<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="FeedMe" suffix=" Â· FeedMe">
      {assigns[:page_title]}
    </.live_title>
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#4f46e5" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="FeedMe" />
    <link rel="apple-touch-icon" href="/images/icon-192.png" />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      // SW init
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(reg => console.log('SW ready'))
            .catch(err => console.log('SW failed:', err));
        });
      }
    </script>
    <script>
      (() => {
        const getPrefersDark = () => window.matchMedia("(prefers-color-scheme: dark)").matches;

        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            const prefersDark = getPrefersDark();
            document.documentElement.setAttribute("data-theme", prefersDark ? "dark" : "light");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
          // Update toggle checkbox state
          const toggle = document.getElementById("theme-toggle");
          if (toggle) {
            const currentTheme = document.documentElement.getAttribute("data-theme");
            toggle.checked = currentTheme === "dark";
          }
        };

        // Initialize theme
        const savedTheme = localStorage.getItem("phx:theme");
        if (savedTheme) {
          setTheme(savedTheme);
        } else {
          setTheme("system");
        }

        // Listen for storage changes (other tabs)
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));

        // Listen for system theme changes
        window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", () => {
          if (!localStorage.getItem("phx:theme")) {
            setTheme("system");
          }
        });

        // Handle toggle click
        document.addEventListener("DOMContentLoaded", () => {
          const toggle = document.getElementById("theme-toggle");
          if (toggle) {
            // Set initial state
            const currentTheme = document.documentElement.getAttribute("data-theme");
            toggle.checked = currentTheme === "dark";

            toggle.addEventListener("change", (e) => {
              setTheme(e.target.checked ? "dark" : "light");
            });
          }
        });

        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="bg-base-200 min-h-screen">
    <nav class="navbar bg-base-100 border-b border-base-300 px-4 sm:px-6 lg:px-8 sticky top-0 z-50">
      <div class="flex-1 gap-2">
        <.link
          href={~p"/"}
          class="btn btn-ghost gap-2 text-xl font-bold text-primary hover:bg-primary/10"
        >
          <img
            src="/images/logo.png"
            alt="FeedMe"
            class="h-8 w-8"
            onerror="this.style.display='none'"
          /> FeedMe
        </.link>
        <%= if @current_scope && @current_scope.user do %>
          <.link href={~p"/households"} class="btn btn-ghost btn-sm text-base-content">
            My Households
          </.link>
        <% end %>
      </div>
      <div class="flex-none flex items-center gap-2">
        <!-- Theme Toggle -->
        <label class="swap swap-rotate btn btn-ghost btn-circle btn-sm">
          <input type="checkbox" id="theme-toggle" class="theme-controller" />
          <!-- Sun icon for light mode -->
          <svg
            class="swap-off h-5 w-5 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z" />
          </svg>
          <!-- Moon icon for dark mode -->
          <svg
            class="swap-on h-5 w-5 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
          </svg>
        </label>

        <ul class="menu menu-horizontal px-1 gap-1">
          <%= if @current_scope && @current_scope.user do %>
            <li class="flex items-center px-3 text-sm text-base-content/70">
              {@current_scope.user.name || @current_scope.user.email}
            </li>
            <li>
              <.link href={~p"/users/settings"} class="hover:bg-base-200">Settings</.link>
            </li>
            <li>
              <.link
                href={~p"/users/log-out"}
                method="delete"
                class="hover:bg-error/10 hover:text-error"
              >
                Log out
              </.link>
            </li>
          <% else %>
            <li>
              <.link href={~p"/users/register"} class="hover:bg-base-200">Register</.link>
            </li>
            <li>
              <.link href={~p"/users/log-in"} class="btn btn-primary btn-sm">Log in</.link>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    {@inner_content}
  </body>
</html>
