# FeedMe Environment Variables
# Copy this file to .env and fill in your values

# Phoenix Secret Key Base (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=

# Database URL (for production)
DATABASE_URL=postgres://user:pass@localhost/feed_me_prod

# Google OAuth 2.0 (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OpenRouter API Key (https://openrouter.ai/keys)
# This is the default key for households that don't have their own BYOK key
OPENROUTER_API_KEY=

# Optional: Set default AI model
# OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# Encryption key for storing API keys (generate with: mix phx.gen.secret 32)
ENCRYPTION_KEY=
